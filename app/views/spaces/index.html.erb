<p id="notice"><%= notice %></p>

<h1>Spaces</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <!-- <th>Join policy</th> -->
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
      <tr>
        <td><%= space.name %></td>
        <td><%= space.description %></td>
        <td><%= space.status %></td>
        <!-- <td><%= space.join_policy %></td> -->
        <% if current_user.spaces.include? space %>
          <% @membership = current_user.space_memberships.where(:space_id => space.id).first %>
          <td><%= link_to 'Leave', space_unjoin_path(@membership) %></td>
          <td><%# link_to 'Leave', @membership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to 'Join', space_join_path(:space_id => space.id) %></td>
        <% end %>
        <td><%= link_to 'Show', space %></td>
        <td><%= link_to 'Edit', edit_space_path(space) %></td>
        <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

